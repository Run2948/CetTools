@model List<Cet4_6Tools.Models.Clazz>
@{
    ViewBag.Title = "历史记录";
}

@section Styles {
}

<div class="container">
    <h1 style="">大学生四六级报名统计 - 历史记录</h1>
    <div class="row">
        <div class="span12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            编号
                        </th>
                        <th>
                            班级
                        </th>
                        <th>
                            人数
                        </th>
                        <th>
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var h in Model)
                        {
                            <tr>
                                <td>@(Model.IndexOf(h)+1)</td>
                                <td>@(h.folder)班</td>
                                <td>共 @(h.count) 人报名</td>
                                <td><a href="@Url.Action("Show",new { folder = h.folder })">导出</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">暂无历史！</td>
                        </tr>
                    }
                </tbody>
            </table>
            <form class="form-inline">
                <a href="@Url.Action("Index","Home")" class="btn btn-primary pull-right">返回首页</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
}
